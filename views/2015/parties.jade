extends ../layout

block content

  .container
    nav
      .nav-wrapper
        a.center You can see the analysis of candidates on various perspective.
    .row
      .col.s12
        div.input-field.col.s11
          select.party_list

    .row
      .col.s12
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Candidates Counts By Parliament
            canvas#candidatecount-canvas(height="300px", width="800px")

      .col.s12
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Candidate Counts By Gender
            canvas#gendercount-canvas(height="300px", width="800px")

      .col.s12
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Candidate Counts By Burmese/Non-Burmese
            canvas#ethnicitycount-canvas(height="300px", width="800px")

      .col.s12
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Candidate Counts By Agegroup Under/ Over 50
            canvas#agegroupcount-canvas(height="300px", width="800px")

      .col.s12
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Candidate Counts With/Without Degree
            canvas#bwaeya-canvas(height="300px", width="800px")

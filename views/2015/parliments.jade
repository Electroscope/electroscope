extends ../layout
block content
  .container
    nav
      .nav-wrapper
        a.center You can see the analysis of candidates on various perspective.
    .row
      .col.s12
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Winners By Party / Parliament
            canvas#winnerpartycount-canvas(height="300px", width="800px")

      .col.s12
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Votes By Party / Parliament
            canvas#votespartycount-canvas(height="300px", width="800px")

      .col.s12
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Candidate Counts By State / Region
            canvas#winnerstatecount-canvas(height="300px", width="800px")
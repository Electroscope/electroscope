extends ../layout

block content

  .container
    nav
      .nav-wrapper
        a.center You can see the analysis of candidates on various perspective.
    .row
      .col.s12
        .card.blue-grey.darken-1
          .card-content.white-text
            span.card-title Candidates Count by Each Party
            canvas#candidatecount-canvas(height="300px", width="600px")

      .col.s6
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Candidate Gender Ratio
            #gender-bar
            canvas#gender-canvas(width="300px", height="300px")
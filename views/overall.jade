extends layout

block content

  .container
    .row
      .col.s12
        ul.tabs
          li.tab.col.s3
            a.active(href='#year2015') 2015
          li.tab.col.s3
            a(href='#year2012') 2012
          li.tab.col.s3
            a(href='#year2010') 2010
  .container#year2015
    nav
      .nav-wrapper
        a.center You can see the analysis of candidates on various perspective.
    .row
      .col.s6
        .card.blue-grey.darken-1
          .card-content.white-text
            span.card-title Candidates According To Age
            canvas#agegroup-canvas(width="300px", height="300px")
          
      .col.s6
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Candidate Gender Ratio
            #gender-bar
            canvas#gender-canvas(width="300px", height="300px")

    .row
      .col.s6
        .card.blue-grey.darken-1
          .card-content.white-text
            span.card-title Candidates According To Religion
            canvas#religion-canvas(width="300px", height="300px")
          
      .col.s6
        .card.blue-grey.darken-1
          .card-content.center.white-text
            span.card-title Candidate Accodring to Ethnicity
            #gender-bar
            canvas#ethnicity-canvas(width="300px", height="300px")

    .row
      .col.s12
        .card.blue-greay.darken-1
          .card-content
            span.card-title Gender Percentage By Party
